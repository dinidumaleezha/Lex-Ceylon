<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:id="@+id/main"
    android:background="@color/colorBackground">

    <!-- Title -->
    <TextView
        android:id="@+id/forgotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔐 Forgot Password?"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/textTitle"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/forgotSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email to receive reset instructions"
        android:textSize="16sp"
        android:textColor="@color/textSecondary"
        android:layout_below="@id/forgotTitle"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgotEmailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotSubtitle"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="32dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgotEmailInput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_bg"
            android:textColor="@color/textTitle"
            android:textColorHint="@color/textSecondary"
            android:textSize="16sp"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Reset Password Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/resetPasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/forgotEmailLayout"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/buttonBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Send Reset Link"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <!-- Back to Login -->
    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Back to Login"
        android:textColor="@color/textSecondary"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:clickable="true" />
</RelativeLayout>
