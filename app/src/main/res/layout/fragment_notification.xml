<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Optional: Notification icon -->
    <ImageView
        android:id="@+id/iconNoNotifications"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_notifications_off"
        android:tint="@color/textSecondary"
        android:contentDescription="No Notifications"
        android:layout_marginBottom="16dp"
        tools:ignore="UseAppTint" />

    <!-- No notifications message -->
    <TextView
        android:id="@+id/textNoNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're all caught up!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textTitle"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_no_new_notifications"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/textSecondary" />

</LinearLayout>
