<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackground"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:title="LexCeylon"
        android:titleTextColor="@android:color/white"
        app:titleCentered="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menuBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/menu_navigation_icon"
                android:tint="@color/textPrimary"
                tools:ignore="UseAppTint" />

            <ImageView
                android:id="@+id/profileBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_icon"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                tools:ignore="UseAppTint" />

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/headerTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text=" "
            android:textColor="@color/textPrimary"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSurface"
        android:alpha="0.8"
        android:layout_below="@id/toolbar"/>

    <FrameLayout
        android:id="@+id/frameLayoutHaome"
        android:layout_width="match_parent"
        android:layout_above="@id/view2"
        android:layout_below="@id/view1"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSurface"
        android:alpha="0.8"
        android:layout_above="@id/bottom_bar"/>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/homeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/homeBg"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/nav_active_bg"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home_icon"
                        android:layout_centerInParent="true"
                        app:tint="@color/buttonBackground" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/lawAiBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/lawAiBg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/nav_circle_bg"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/lawIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ai_icon"
                        android:layout_centerInParent="true"
                        app:tint="@color/textPrimary" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notificationBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/notificationBg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/nav_circle_bg"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/notiIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notifiy_icon"
                        android:layout_centerInParent="true"
                        app:tint="@color/textPrimary" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/settingBg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/nav_circle_bg"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/settingsIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/setting_icon"
                        android:layout_centerInParent="true"
                        app:tint="@color/textPrimary" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
