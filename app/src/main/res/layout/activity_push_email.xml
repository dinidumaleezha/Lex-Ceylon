<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Activity.PushEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Toolbar -->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:titleTextColor="@android:color/white"
            app:titleCentered="true">

            <RelativeLayout
                android:id="@+id/backBtnContainer"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/nav_circle_bg">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back_icon"
                    android:tint="@color/textPrimary"
                    tools:ignore="UseAppTint" />
            </RelativeLayout>

            <TextView
                android:id="@+id/email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LexCeylon Email Generator"
                android:textColor="@color/textTitle"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:layout_marginStart="50dp"
                android:textStyle="bold"
                android:gravity="center" />
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorSurface"
            android:alpha="0.8" />

        <!-- User Input Box -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/input_bg"
            android:padding="12dp">

            <EditText
                android:id="@+id/email_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_a_short_idea_or_request_here"
                android:textColor="@color/textPrimary"
                android:textColorHint="#AAAAAA"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <!-- Spinner to Select Action -->
        <Spinner
            android:id="@+id/cyber_crime_contexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/input_bg"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:entries="@array/cyber_crime_contexts"/>

        <!-- Generate Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="@color/buttonBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Message"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    </LinearLayout>
</RelativeLayout>
