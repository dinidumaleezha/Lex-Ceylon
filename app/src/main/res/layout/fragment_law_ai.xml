<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".Fragment.LawAiFragment">

    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/inputBox">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, I'm LexCeylon."
                android:textSize="15sp"
                android:textColor="@color/textTitle"
                android:fontFamily="@font/hello_font"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_below="@id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How can I help today?"
                android:textSize="12sp"
                android:textColor="@color/textSecondary"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>

        </RelativeLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/inputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/askInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:inputType="text"
            android:textColor="@color/textTitle"
            android:hint="Type your question..."
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColorHint="@color/textSecondary"
            android:background="@drawable/input_bg"
            android:padding="12dp" />

        <RelativeLayout
            android:id="@+id/btnSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/send_icon"
                android:layout_centerInParent="true"
                android:tint="@color/textPrimary"
                tools:ignore="UseAppTint" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
